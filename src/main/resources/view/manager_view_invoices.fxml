<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.invoices.InvoiceController"
          prefHeight="400.0" prefWidth="600.0">

    <Text text="Invoices"/>

    <Label text="Enter New Invoice No" GridPane.rowIndex="1" />
    <TextField fx:id="invoiceNoField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Enter invoice type (Incomes / Expenses)" GridPane.rowIndex="2" />
    <ChoiceBox fx:id="invoiceTitleBox" layoutX="44.0" layoutY="71.0" prefHeight="25.0" prefWidth="191.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Enter Company Title" GridPane.rowIndex="3" />
    <TextField fx:id="invoiceCompanyField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Enter invoice issue date: Example (YYYY-MM-DD)" GridPane.rowIndex="4" />
    <DatePicker fx:id="datePickerIssueDate" layoutX="13.0" layoutY="79.0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Enter description" GridPane.rowIndex="5" />
    <TextField fx:id="invoiceDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Enter invoice subtotal" GridPane.rowIndex="6" />
    <TextField fx:id="invoiceSubTotalField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Enter invoice Tax amount" GridPane.rowIndex="7" />
    <TextField fx:id="invoiceTaxField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Enter invoice Total amount" GridPane.rowIndex="8" />
    <TextField fx:id="invoiceTotalAmountField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Enter invoice status" GridPane.rowIndex="9" />
    <ChoiceBox fx:id="invoiceStatusBox" layoutX="44.0" layoutY="71.0" prefHeight="25.0" prefWidth="191.0" GridPane.rowIndex="9" GridPane.columnIndex="1" />

    <Label text="Enter invoice due date" GridPane.rowIndex="10" />
    <DatePicker fx:id="datePickerInvoiceDueDate" layoutX="13.0" layoutY="79.0" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Button onAction="#onManagerInvoiceCreateClick" GridPane.rowIndex="11" GridPane.columnIndex="1" text="Create"/>

    <Label text="Enter ID of invoice to edit status" GridPane.rowIndex="12" />
    <TextField fx:id="invoiceStatusEditIDField" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
    <Label text="Enter invoice current status" GridPane.rowIndex="13" />
    <ChoiceBox fx:id="invoiceStatusEditBox" layoutX="44.0" layoutY="71.0" prefHeight="25.0" prefWidth="191.0" GridPane.columnIndex="1" GridPane.rowIndex="13" />
    <Button onAction="#onManagerInvoiceStatusEdit" GridPane.rowIndex="15" GridPane.columnIndex="1" text="Edit"/>

    <Label text="Enter ID of invoice to delete" GridPane.rowIndex="16" />
    <TextField fx:id="invoiceIDField" GridPane.columnIndex="1" GridPane.rowIndex="16"/>
    <Button onAction="#onManagerInvoiceDelete" GridPane.rowIndex="17" GridPane.columnIndex="1" text="Delete"/>

    <Button onAction="#navigateToScene" id="user_read_invoices" GridPane.rowIndex="18" GridPane.columnIndex="1" text="View Invoices"/>

    <Button onAction="#navigateToScene" id="manager_profile" GridPane.rowIndex="19" GridPane.columnIndex="1" text="Back to profile"/>
</GridPane>
