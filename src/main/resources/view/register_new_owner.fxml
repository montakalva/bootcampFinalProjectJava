<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.chart.NumberAxis?>
<?import com.sun.javafx.scene.control.IntegerField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.users.UserController"
          prefHeight="400.0" prefWidth="600.0">

    <Text text="Register new apartment owner" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Enter owner's first name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Enter owner's last name" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Choose owner's password" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Password must contain minimum 6 characters" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

    <Label text="Confirm owner's password" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Password must contain minimum 6 characters" GridPane.rowIndex="4" GridPane.columnIndex="2"/>

    <Label text="Enter number of the owner's apartment" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="apartmentField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Enter owner's e-mail address" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Enter owner's phone number" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Button onAction="#onRegisterNewOwnerClick" GridPane.rowIndex="9" GridPane.columnIndex="1" text="Register new apartment owner"/>

    <Button onAction="#navigateToScene" id="manager_profile" text="Back" GridPane.rowIndex="11" GridPane.columnIndex="1"/>


</GridPane>