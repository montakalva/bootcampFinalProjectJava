<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.users.UserController"
          prefHeight="400.0" prefWidth="600.0">


    <Text fx:id="changeEmailTitleText" text="Update your e-mail address" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Enter updated e-mail address" GridPane.rowIndex="4"/>
    <TextField fx:id="newEmailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Enter your password to confirm the updates" GridPane.rowIndex="5"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button onAction="#onUpdateEmailClick" GridPane.rowIndex="6" GridPane.columnIndex="1" text="Update your e-mail address"/>

    <Button onAction="#onGoBackClick" GridPane.rowIndex="7" GridPane.columnIndex="1" text="Return back to profile"/>

</GridPane>

