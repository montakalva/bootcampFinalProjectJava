<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.housemanagementsystem.users.UserController"
            prefHeight="400.0" prefWidth="600.0">

    <Text text="Welcome to House Management Application!" />
    <Label text="Enter your first name" GridPane.rowIndex="1" />
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Enter your last name" GridPane.rowIndex="2" />
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Enter your password" GridPane.rowIndex="3" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button onAction="#onUserLoginClick" GridPane.rowIndex="1" GridPane.columnIndex="2" text="Login"/>


</GridPane>