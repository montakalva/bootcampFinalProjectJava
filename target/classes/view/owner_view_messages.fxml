<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.messages.MessageController"
          prefHeight="400.0" prefWidth="600.0">

    <Text text="Discussions"/>

    <Label text="Enter Discussion to comment ID" GridPane.rowIndex="5" />
    <TextField fx:id="messageIDCommentField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Enter your comment" GridPane.rowIndex="7" />
    <TextField fx:id="messageCommentField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Button onAction="#onOwnerDiscussionCommentClick" GridPane.rowIndex="9" GridPane.columnIndex="1" text="Submit"/>

    <Button onAction="#navigateToScene" id="user_read_messages" GridPane.rowIndex="15" GridPane.columnIndex="1" text="View Discussions"/>
    <Button onAction="#navigateToScene" id="owner_profile" GridPane.rowIndex="16" GridPane.columnIndex="1" text="Back to profile"/>


</GridPane>
