<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.users.UserController"
          prefHeight="400.0" prefWidth="600.0">

    <Text fx:id="changePasswordTitleText" text="Change your password" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Enter your current password" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <Label text="Enter your new password" GridPane.rowIndex="2" />
    <PasswordField fx:id="newPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    <Label text="Confirm your new password" GridPane.rowIndex="3" />
    <PasswordField fx:id="confirmNewPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Button onAction="#onChangePasswordClick" GridPane.rowIndex="5" GridPane.columnIndex="2" text="Change your password"/>

    <Button onAction="#onGoBackClick" GridPane.rowIndex="6" GridPane.columnIndex="2" text="Return back to profile"/>

</GridPane>