<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>
<GridPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: WHITE;" stylesheets="@../stylesheets/background_1.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.housemanagementsystem.users.UserController">

    <Text fx:id="changePasswordTitleText" text="Change your password" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font name="Berlin Sans FB Demi Bold" size="18.0" />
        </font>
        <GridPane.margin>
            <Insets top="175.0" />
        </GridPane.margin></Text>

    <Label text="Enter current password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <font>
            <Font name="System Bold Italic" size="14.0" />
        </font>
        <GridPane.margin>
            <Insets top="10.0" />
        </GridPane.margin></Label>
    <PasswordField fx:id="passwordField" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="13.0" />
        </font>
        <effect>
            <InnerShadow>
                <color>
                    <Color red="0.019607843831181526" green="0.43529412150382996" blue="0.10196078568696976" />
                </color></InnerShadow>
        </effect>
        <GridPane.margin>
            <Insets bottom="5.0" />
        </GridPane.margin></PasswordField>

    <Label text="Enter new password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <font>
            <Font name="System Bold Italic" size="14.0" />
        </font></Label>
    <PasswordField fx:id="newPasswordField" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
            <Font size="13.0" />
        </font>
        <effect>
            <InnerShadow>
                <color>
                    <Color red="0.019607843831181526" green="0.43529412150382996" blue="0.10196078568696976" />
                </color></InnerShadow>
        </effect>
        <GridPane.margin>
            <Insets bottom="5.0" />
        </GridPane.margin></PasswordField>

    <Label text="Confirm new password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <font>
            <Font name="System Bold Italic" size="14.0" />
        </font></Label>
    <PasswordField fx:id="confirmNewPasswordField" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <font>
            <Font size="13.0" />
        </font>
        <effect>
            <InnerShadow>
                <color>
                    <Color red="0.019607843831181526" green="0.43529412150382996" blue="0.10196078568696976" />
                </color></InnerShadow>
        </effect>
        <GridPane.margin>
            <Insets bottom="15.0" />
        </GridPane.margin></PasswordField>

    <Button onAction="#onChangePasswordClick" prefHeight="30.0" prefWidth="187.0" style="-fx-background-color: SPRINGGREEN;" text="Change password" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        <effect>
            <InnerShadow />
        </effect>
        <GridPane.margin>
            <Insets bottom="20.0" />
        </GridPane.margin></Button>

    <Button onAction="#onGoBackClick" style="-fx-background-color: ORANGE;" text="Back to profile" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="10">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        <effect>
            <InnerShadow />
        </effect></Button>
    <columnConstraints>
        <ColumnConstraints maxWidth="500.0" prefWidth="290.0" />
        <ColumnConstraints />
        <ColumnConstraints maxWidth="500.0" prefWidth="250.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="300.0" prefHeight="200.0" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <effect>
        <InnerShadow />
    </effect>

</GridPane>