<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.paint.Color?>
<GridPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.housemanagementsystem.users.UserController">

    <Text fx:id="changePasswordTitleText" text="Change your password" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Enter your current password" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="14.0" />
        </font>
        <effect>
            <InnerShadow>
                <color>
                    <Color red="0.48627451062202454" green="1.0" blue="0.003921568859368563" />
                </color>
            </InnerShadow>
        </effect></PasswordField>

    <Label text="Enter your new password" GridPane.rowIndex="2" />
    <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="14.0" />
        </font></PasswordField>

    <Label text="Confirm your new password" GridPane.rowIndex="3" />
    <PasswordField fx:id="confirmNewPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
            <Font size="14.0" />
        </font></PasswordField>

    <Button onAction="#onChangePasswordClick" text="Change your password" GridPane.columnIndex="2" GridPane.rowIndex="5" />

    <Button onAction="#onGoBackClick" text="Return back to profile" GridPane.columnIndex="2" GridPane.rowIndex="6" />
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <effect>
        <InnerShadow />
    </effect>

</GridPane>