<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.users.UserController"
          prefHeight="400.0" prefWidth="600.0">

    <Text fx:id="changePhoneNumberTitleText" text="Update your phone number" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Enter updated phone number" GridPane.rowIndex="4"/>
    <TextField fx:id="newPhoneNumberField" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Label text="Enter your password to confirm the updates" GridPane.rowIndex="5"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Button onAction="#onUpdatePhoneNumberClick" GridPane.rowIndex="6" GridPane.columnIndex="2" text="Update your phone number"/>

    <Button onAction="#onGoBackClick" GridPane.rowIndex="7" GridPane.columnIndex="2" text="Return back to profile"/>

</GridPane>

</GridPane>
